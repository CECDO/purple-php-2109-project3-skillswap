{% extends 'base.html.twig' %}

{% block body %}
    <section>

<h1 class="d-flex justify-content-center mt-5">Formulaire de contact</h1>

{% set messages = app.flashes("success") %}

{% if messages is empty %}
<div class="d-flex mx-auto">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        {% if is_granted("ROLE_USER") %}
        <div class="">
            <div class="mt-3">
                {{ form_label(form.firstname, 'Prénom') }}
                {{ form_widget(form.firstname, {'attr': {'value': app.user.firstname}}) }}
            </div>
            <div class="mt-2">
                {{ form_label(form.email, 'Email') }}
                {{ form_widget(form.email, {'attr': {'value': app.user.email}}) }}
            </div>

        {% else %}
            <div class="mt-3">
                {{ form_label(form.firstname, 'Prénom') }}
                {{ form_widget(form.firstname) }}
            </div>
            <div class="mt-2">
                {{ form_label(form.email, 'Email') }}
                {{ form_widget(form.email) }}
            </div>

        {% endif %}
            <div class="mt-2">
                {{ form_label(form.text, 'Texte') }}
                {{ form_widget(form.text) }}
            </div>
            <input class="btnModifProfile btn btn-outline-danger rounded-pill mx-5 mt-4" type="submit" value="Envoyer votre demande" />
        </div>
        {{ form_end(form) }}
        </div>
    {% else %}

    <div class="alert alert-success" role="alert">
        <p>{{ messages.0 }}</p>
        <a href="/">Retour à la page d'accueil</a>
    </div>

{% endif %}
    </section>

{% endblock %}