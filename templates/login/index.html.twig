{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<section class="login">
    {% if error %}
        <div>{{ error.messageKey }}</div>
    {% endif %}
    <form action="{{ path('login') }}" method="post">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email :</label>
            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text">Votre adresse mail ne sera pas communiqu√©e.</div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Mot de passe :</label>
            <input type="password" class="form-control" id="password" name="_password">
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button type="submit" class="btn btn-outline-success rounded-pill">Connexion</button>
    </form>
        <hr>
        <a href="{{ path('app_register') }}">Pas encore de compte ? Cliquez ici...</a>
</section>
{% endblock %}
