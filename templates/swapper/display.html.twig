{% extends 'base.html.twig' %}

{% block title %}Informations sur un Swapper{% endblock %}

{% block body %}
<div class="container">
  <div class="card mb-3">
    <h3 class="card-header">{{ user.firstname }} {{ user.lastname }}</h3>
    <div class="card-body">
      <div id="up">
        <img id="pic2" src="/upload/avatars/{{ user.picture }}" class="card-img-top" alt="photo de {{ user.firstname }}">
        <div id="other_skills">
          <h5 class="card-title mt-4">Voici ses domaines de compétence :</h5>
          <ul>
            {% for skill in user.skill %}
              <li>{{ skill.name }}</li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
    <br>
    <ul class="list-group list-group-flush">
      <li class="liswap list-group-item"><b>A propos de ce swapper : </b>{{ user.description }}</li>
      <li class="list-group-item"><b>Numéro d'identification société : </b>{{ user.company }}</li>
      <li class="list-group-item"><b>Profil LinkdeIn : </b>{{ user.linkedin }}</li>
      <li class="list-group-item"><b>Site Web : </b>{{ user.website }}</li>
    </ul>
    <div class="swapper_btn_div card-body">
      <a href="{{ path(" swap_research", {"id": skill.id}) }}"class="swapper_btn btn btn-secondary btn-lg">Retour à la liste</a>
      <a href="{{ path(" swap_form", {"skill_id": skill.id, "user_id": user.id}) }}"class="swapper_btn btn btn-primary btn-lg">Lancer un SWAP</a>
    </div>
    <div class="swapperfooter card-footer text-muted">
      <div class="swapperfooter">
        <div>Note moyenne de ce swappper : </div>
        <div class="yellow">
          <div>{{ user.notation }}</div>
          <div class="star">★</div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}