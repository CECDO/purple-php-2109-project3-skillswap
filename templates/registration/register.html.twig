{% extends 'base.html.twig' %}

{% block title %}Enregistrement{% endblock %}

{% block body %}
<section class="register">
    {% for flash_error in app.flashes('verify_email_error') %}
    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Inscription</h1>
    <hr>
    {{ form_start(form) }}
    {{ form_label(form.firstname, 'Pr√©nom', {'firstname': {'class': 'form-label'}}) }}
    {{ form_widget(form.firstname, {'firstname': {'class': 'form-control'}}) }}
    <br>
    {{ form_label(form.email, 'Email', {'email': {'class': 'form-label'}}) }}
    {{ form_widget(form.email, {'email': {'class': 'form-control'}}) }}
    <br>
    {{ form_label(form.plainPassword, 'Mot de passe', {'password': {'class': 'form-label'}}) }}
    {{ form_widget(form.plainPassword, {'password': {'class': 'form-control'}}) }}
    <br>
    {{ form_label(form.agreeTerms, 'J accepte les CGU', {'agreeTerms': {'class': 'custom-control-label'}}) }}
    {{ form_widget(form.agreeTerms, {'agreeTerms': {'class': 'form-check-input'}}) }}
    <br>
    <div>
        <button type="submit" class="btn btn-outline-success rounded-pill">Enregistrer</button>
    </div>
    {{ form_end(form) }}
    </div>
</section>
{% endblock %}
