{% extends 'base.html.twig' %}

{% block title %}Recherche de Skills{% endblock %}

{% block body %}
<section>
    <h1>Les Skills</h1><br>
    <div class="accordion accordion-flush" id="accordionFlushExample">
        {% for accordion, category in categories %}
        <div class="accordion-item">
            <h2 class="accordion-header" id="flush-heading{{ accordion }}">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#flush-collapse{{ accordion }}" aria-expanded="false" aria-controls="flush-collapse{{ accordion }}">
                    {{ category }}
                </button>
            </h2>
            <div id="flush-collapse{{ accordion }}" class="accordion-collapse collapse" aria-labelledby="flush-heading{{ accordion }}"
                data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">
                    {% for skill in skills %}
                    {% if skill.category == category %}
                    <p><a href="{{ path("swap_research", {id: skill.id}) }}">{{ skill.name }}</a></p>
                    {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</section>
{% endblock %}